<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_background">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="아이디  :"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="비밀번호  :"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="이름 :"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="나이 :"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/SignID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8" />

    <EditText
        android:id="@+id/SignPW"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9" />

    <EditText
        android:id="@+id/SignAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView11" />

    <EditText
        android:id="@+id/SignName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/SignBackBtn"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginLeft="69dp"
        android:background="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/SignOKBtn"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="@drawable/okay"
        android:layout_marginRight="75dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/SignRetype"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:ems="10"
        android:hint="비밀번호 재 입력"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/SignPW"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/SignPW" />

    <RadioGroup
        android:id="@+id/SignGender"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/SignAge">

        <RadioButton
            android:id="@+id/radioman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#11FFFFFF"
            android:text="남자"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radiowoman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#11FFFFFF"
            android:text="여자"
            android:textColor="#FFFFFF" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>