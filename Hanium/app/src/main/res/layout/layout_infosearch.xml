<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <Button
            android:id="@+id/backbtn2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backbtn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.14"
            android:text="회원찾기"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#c0c0c0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/constraintLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="185dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/border1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout2">

            <EditText
                android:id="@+id/search_name"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:background="#c0c0c0"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp" />

            <EditText
                android:id="@+id/search_birth"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="#c0c0c0"
                android:ems="10"
                android:hint="생일"
                android:inputType="textPersonName"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/search_name"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_idsearch"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="45dp"
                android:text="Mail 찾기"
                app:layout_constraintLeft_toRightOf="@+id/search_name"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintVertical_bias="1.0">

            <EditText
                android:id="@+id/search_email"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="95dp"
                android:background="#c0c0c0"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textPersonName"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/search_name2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="#c0c0c0"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/search_email"
                android:layout_marginLeft="25dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/search_phone"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#c0c0c0"
                android:ems="10"
                android:hint="핸드폰 번호"
                android:inputType="textPersonName"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/search_name2" />

            <Button
                android:id="@+id/btn_pwsearch"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="113dp"
                android:text="PW 찾기"
                app:layout_constraintLeft_toRightOf="@+id/search_email"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="010"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_name2" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>